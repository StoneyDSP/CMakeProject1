{
    "version": 5,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 24,
        "patch": 2
    },
    "configurePresets": [
        {
            "name": "vcpkg-variables",
            "displayName": "vcpkg-variables",
            "description": "Set the vcpkg ENV variables",
            "hidden": true,
            "environment": {
                "VCPKG_MANIFEST_MODE": "ON",
                "VCPKG_ROOT": "${sourceDir}/extern/vcpkg",
                "VCPKG_DEFAULT_TRIPLET": "${presetName}",
                "VCPKG_DEFAULT_HOST_TRIPLET": "${presetName}",
                "VCPKG_DOWNLOADS": "${sourceDir}/downloads",
                "VCPKG_FEATURE_FLAGS": "manifests,versions,binarycaching,registries",
                "VCPKG_INSTALLED_DIR": "${sourceDir}/installed",
                "VCPKG_MANIFEST_DIR": "${sourceDir}/extern"
            }
        }
    ]
}
