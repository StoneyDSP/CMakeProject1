{
    "version": 5,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 24,
        "patch": 2
    },
    "include": [
        "CMakeDebugPresets.json"
    ],
    "configurePresets": [
        {
            "name": "windows-base",
            "description": "Target Windows with the Visual Studio development environment.",
            "hidden": true,
            "inherits": [
                "debug-settings"
            ],
            "generator": "Ninja Multi-Config",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "installDir": "${sourceDir}/installed/${presetName}",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            },
            "toolset":{
                "value": "VCTargetsPath=${sourceDir}/support/msbuild/**",
                "strategy": "external"
            },
            "environment": {
                "CMAKE_CONFIGURATION_TYPES": "Debug;Release;RelWithDebInfo;MinSizeRel",
                "VCPKG_BINARY_SOURCES": "clear;nuget,GitHub,readwrite",
                "VCPKG_USE_NUGET_CACHE": "true",
                "VCPKG_DOWNLOADS": "${sourceDir}/downloads",
                "VCPKG_CRT_LINKAGE": "dynamic",
                "VCPKG_LIBRARY_LINKAGE": "dynamic",
                "CMAKE_C_COMPILER": "cl.exe",
                "CMAKE_CXX_COMPILER": "cl.exe"
            }
        },
        {
            "name": "x64-windows",
            "displayName": "x64",
            "description": "Target Windows (64-bit) with the Visual Studio development environment.",
            "inherits":[
                "windows-base"
            ],
            "toolset":{
                "value": "host=x64",
                "strategy": "external"
            },
            "architecture": {
                "value": "x64",
                "strategy": "external"
            },
            "environment": {
                "VCPKG_DEFAULT_TRIPLET": "x64-windows",
                "VCPKG_DEFAULT_HOST_TRIPLET": "x64-windows",
                "VCPKG_TARGET_TRIPLET": "x64-windows",
                "VCPKG_TARGET_ARCHITECTURE": "x64"
            },
            "cacheVariables": {
                "CMAKE_C_COMPILER": "cl.exe",
                "CMAKE_CXX_COMPILER": "cl.exe"
            },
            "vendor": {
                "microsoft.com/VisualStudioSettings/CMake/1.0": {
                    "intelliSenseMode": "windows-msvc-x64"
                }
            }
        },
        {
            "name": "x86-windows",
            "displayName": "x86",
            "description": "Target Windows (32-bit) with the Visual Studio development environment.",
            "inherits": [
                "windows-base"
            ],
            "toolset":{
                "value": "host=x86",
                "strategy": "external"
            },
            "architecture": {
                "value": "x86",
                "strategy": "external"
            },
            "environment": {
                "VCPKG_DEFAULT_TRIPLET": "x86-windows",
                "VCPKG_DEFAULT_HOST_TRIPLET": "x86-windows",
                "VCPKG_TARGET_TRIPLET": "x86-windows",
                "VCPKG_TARGET_ARCHITECTURE": "x86"
            },
            "cacheVariables": {
                "CMAKE_C_COMPILER": "cl.exe",
                "CMAKE_CXX_COMPILER": "cl.exe"
            },
            "vendor": {
                "microsoft.com/VisualStudioSettings/CMake/1.0": {
                    "intelliSenseMode": "windows-msvc-x86"
                }
            }
        }
    ]
}
