{
    "version": 5,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 24,
        "patch": 1
    },
    "configurePresets": [
        {
            "name": "vcpkg-variables",
            "displayName": "vcpkg-variables",
            "description": "Set the vcpkg ENV variables",
            "hidden": true,
            "environment": {
                "VCPKG_ROOT": "${sourceDir}/bin/${presetName}",
                "VCPKG_DEFAULT_TRIPLET": "${presetName}",
                "VCPKG_DOWNLOADS": "${sourceDir}/bin/${presetName}/downloads"
            }
        }
    ]

}
