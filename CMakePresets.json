{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 20,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "windows-base",
            "description": "This build is only available on Windows",
            "hidden": true,
            "generator": "Ninja",
            "binaryDir": "${sourceDir}",
            "installDir": "${sourceDir}",
            "debug": {
                "find": false,
                "tryCompile": false,
                "output": false
            },
            "toolchainFile": "${VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
            "cacheVariables": {
                "CMAKE_CXX_COMPILER": "cl.exe"
            },
            "errors": {
                "deprecated": true,
                "dev": true
            },
            "warnings": {
                "deprecated": true,
                "dev": true,
                "systemVars": true,
                "unusedCli": true,
                "uninitialized": false
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        },
        {
            "name": "x64",
            "displayName": "x64",
            "inherits": "windows-base",
            "architecture": {
                "value": "x64",
                "strategy": "external"
            },
            "cacheVariables": {
                "VCPKG_TARGET_TRIPLET": "x64-windows"
            },
            "toolset":{
                "value": "x64",
                "strategy": "external"
            },
            "vendor": {
                "microsoft.com/VisualStudioSettings/CMake/1.0": {
                    "hostOS": "Windows",
                    "cacheRoot": "${sourceDir}",
                    "enableMicrosoftCodeAnalysis": true,
                    "intelliSenseMode": "windows-msvc-x64",
                    "intelliSenseOptions": {}
                },
                "microsoft.com/VisualStudioRemoteSettings/CMake/1.0": {
                    "copySources": true,
                    "sourceDir": "$env{HOME}/.vs/$ms{projectDirName}",
                    "copyBuildOutput": false
                }
            }
        },
        {
            "name": "x86",
            "displayName": "x86",
            "inherits": "windows-base",
            "architecture": {
                "value": "x86",
                "strategy": "external"
            },
            "toolset":{
                "value": "x86",
                "strategy": "external"
            },
            "cacheVariables": {
                "VCPKG_TARGET_TRIPLET": "x86-windows"
            },
            "vendor": {
                "microsoft.com/VisualStudioSettings/CMake/1.0": {
                    "hostOS": "Windows",
                    "cacheRoot": "${sourceDir}/CMakeCache.txt",
                    "enableMicrosoftCodeAnalysis": true,
                    "intelliSenseMode": "windows-msvc-x86",
                    "intelliSenseOptions": {
                        "useCompilerDefaults": true,
                        "additionalCompilerArgs": "empty"
                    }
                },
                "microsoft.com/VisualStudioRemoteSettings/CMake/1.0": {
                    "copySources": true,
                    "sourceDir": "$env{HOME}/.vs/$ms{projectDirName}",
                    "copyBuildOutput": false
                }
            }
        }
    ],
    "buildPresets": [

        {
            "name": "x64 Debug",
            "displayName": "Debug",
            "description": "x64 Debug",
            "configurePreset": "x64",
            "configuration": "Debug",
            "inheritConfigureEnvironment": true,
            "verbose": true
        },
        {
            "name": "x64 Release",
            "displayName": "Release",
            "description": "x64 Release",
            "configurePreset": "x64",
            "configuration": "Release",
            "inheritConfigureEnvironment": true,
            "verbose": true
        },
        {
            "name": "x64 RelWithDebInfo",
            "displayName": "RelWithDebInfo",
            "description": "x64 RelWithDebInfo",
            "configurePreset": "x64",
            "configuration": "RelWithDebInfo",
            "inheritConfigureEnvironment": true,
            "verbose": true
        },
        {
            "name": "x64 MinSizeRel",
            "displayName": "MinSizeRel",
            "description": "x64 MinSizeRel",
            "configurePreset": "x64",
            "configuration": "MinSizeRel",
            "inheritConfigureEnvironment": true,
            "verbose": true
        },
        {
            "name": "x86 Debug",
            "displayName": "Debug",
            "description": "x86 Debug",
            "configurePreset": "x86",
            "configuration": "Debug",
            "inheritConfigureEnvironment": true,
            "verbose": true
        },
        {
            "name": "x86 Release",
            "displayName": "Release",
            "description": "x86 Release",
            "configurePreset": "x86",
            "configuration": "Release",
            "inheritConfigureEnvironment": true,
            "verbose": true
        },
        {
            "name": "x86 RelWithDebInfo",
            "displayName": "RelWithDebInfo",
            "description": "x86 RelWithDebInfo",
            "configurePreset": "x86",
            "configuration": "RelWithDebInfo",
            "inheritConfigureEnvironment": true,
            "verbose": true
        },
        {
            "name": "x86 MinSizeRel",
            "displayName": "MinSizeRel",
            "description": "x86 MinSizeRel",
            "configurePreset": "x86",
            "configuration": "MinSizeRel",
            "inheritConfigureEnvironment": true,
            "verbose": true
        }
    ],
    "testPresets": [

        {
            "name": "x64 Test",
            "displayName": "Test",
            "description": "x64 Test",
            "configurePreset": "x64",
            "configuration": "Debug",
            "inheritConfigureEnvironment": true,
            "output": {"outputOnFailure": true},
            "execution": {"noTestsAction": "error", "stopOnFailure": true}
        },
        {
            "name": "x86 Test",
            "displayName": "Test",
            "description": "x86 Test",
            "configurePreset": "x86",
            "configuration": "Debug",
            "inheritConfigureEnvironment": true,
            "output": {"outputOnFailure": true},
            "execution": {"noTestsAction": "error", "stopOnFailure": true}
        }
    ]
}
